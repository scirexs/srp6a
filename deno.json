{
  "name": "@scirexs/srp6a",
  "version": "1.0.0",
  "license": "MIT",
  "exports": {
    "./client": "./src/client/mod.ts",
    "./server": "./src/server/mod.ts"
  },
  "publish": {
    "include": [
      "src/",
      "README.md",
      "LICENSE",
      "deno.json"
    ]
  },
  "nodeModulesDir": "auto",
  "compilerOptions": {
    "module": "esnext",
    "moduleResolution": "bundler"
  },
  "tasks": {
    "dev": "deno test --watch"
  },
  "lint": {
    "include": ["src/", "tests/"],
    "rules": {
      "tags": ["recommended"],
      "exclude": ["no-unused-vars", "no-window"]
    }
  },
  "fmt": {
    "include": ["src/", "tests/"],
    "lineWidth": 140
  }
}
